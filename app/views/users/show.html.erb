<%= @profile_user.username %>
<% if current_user == @profile_user %>
  <%= link_to 'Add Language', new_user_language_path %>
  <%= link_to 'Add Bio', edit_user_path %>
<% end %>
<ul class="list-unstyled">
<% @profile_user.languages.each do |language| %>
  <li>
    <%= language.name %>
    <%= @profile_user.user_languages.find_by(language_id: language.id).skill_level %>
  </li>
<% end %>
</ul>

<% if current_user %>
  <p>contact: <%= mail_to @profile_user.email %></p>
<% end %>

<div><p>bio: <%= @profile_user.bio %></p></div>
